<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ppp">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="PC Builder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".searchComponents"
            android:label="Components" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.searchComponents" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="Settings" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.Settings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cpuSearchActivity"
            android:label="Search CPU" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.cpuSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cpuCoolerSearchActivity"
            android:label="Search CPU Cooler" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.cpuCoolerSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".motherboardSearchActivity"
            android:label="Search Motherboards" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.motherboardSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".memorySearchActivity"
            android:label="Search Memory" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.memorySearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".storageSearchActivity"
            android:label="Search Storage" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.storageSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".gpuSearchActivity"
            android:label="Search GPU" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.gpuSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".psuSearchActivity"
            android:label="Search PSU" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.psuSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".caseSearchActivity"
            android:label="Search Case" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.caseSearch" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".buildPcActivity"
            android:label="Build PC" >
            <intent-filter>
                <action android:name="com.iphonik.chameleon.buildPc" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>