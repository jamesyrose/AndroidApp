                        <TextView
                            android:id="@+id/add_product_gpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:textColor="#FFFFFF"
                            android:layout_marginRight="40dp"
                            android:textSize="18dp"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <!--  PSU -->
